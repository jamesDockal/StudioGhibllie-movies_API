{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:containers": "env $(cat .env.example) docker-compose up",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/db/connection.ts migration:generate ./src/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./dist/db/connection.js migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ./src/db/connection.ts migration:revert"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "sqlite3": "^5.0.11",
    "typeorm": "^0.3.7"
  }
}
